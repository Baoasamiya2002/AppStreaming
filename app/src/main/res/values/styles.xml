<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.DarkActionBar">

        <item name="colorPrimary">@color/verde</item>
        <item name="colorPrimaryDark">@color/morado</item>
        <item name="colorAccent">@color/letras</item>
        <item name="android:colorBackground">@color/fondo</item>
        <item name="colorSurface">@color/fondo2</item>
        <item name="colorOnSurface">@color/letras</item>
        <item name="android:itemTextAppearance">@style/myCustomMenuTextAppearance</item>
    </style>

    <style name="myCustomMenuTextAppearance" parent="@android:style/TextAppearance.Widget.IconMenu.Item">
        <item name="android:textColor">@color/letras</item>
    </style>
</resources>
