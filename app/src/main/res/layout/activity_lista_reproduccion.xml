<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:padding="30dp"
    tools:context=".ListaReproduccionActivity">

    <ImageView
        android:id="@+id/imgListaRep"
        android:layout_width="245dp"
        android:layout_height="240dp"
        app:srcCompat="@android:mipmap/sym_def_app_icon" />

    <Space
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp" />

    <TextView
        android:id="@+id/txtNombreListaRep"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:text="Lista de Reproduccion n"
        android:textAlignment="center"
        android:textColor="@color/colorAccent"
        android:textSize="30dp" />

    <Button
        android:id="@+id/btnReproducir"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/btnReproducir"
        android:textColor="@color/colorAccent"
        android:textSize="25dp"
        app:backgroundTint="@color/colorPrimary" />

    <ListView
        android:layout_width="match_parent"
        android:layout_height="258dp"
        android:background="#6A534B4E" />

</LinearLayout>