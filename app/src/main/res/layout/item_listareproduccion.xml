<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
                                   android:layout_width="wrap_content"
                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                   android:layout_margin="1dp"
                                   android:padding="2dp"
                                   app:cardElevation="4dp"
                                   app:cardCornerRadius="4dp"
                                   app:cardBackgroundColor="@color/fondo2"
                                   android:layout_height="wrap_content">
    <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

        <ImageView
                android:id="@+id/ivInicioListareproduccion"
                android:layout_width="wrap_content"
                android:layout_height="100dp"
                android:layout_centerHorizontal="true"
                android:src="@mipmap/image_logo_foreground"
                android:scaleType="fitXY"/>
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/bienvenida"
                android:layout_below="@+id/ivInicioListareproduccion"
                android:layout_centerHorizontal="true"
                android:id="@+id/tvNombreListareproduccion"/>
    </RelativeLayout>

</androidx.cardview.widget.CardView>